{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "skipLibCheck": true
  },
  "include": [
    "src/docs/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}